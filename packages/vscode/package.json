{
  "name": "doc-jit",
  "publisher": "jcalixte",
  "version": "1.0.0",
  "description": "A documentation just in time to access the right doc when you need it the most",
  "license": "MIT",
  "categories": [
    "Education"
  ],
  "main": "./dist/index.js",
  "engines": {
    "vscode": "^1.71.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "tsup src/index.ts --external vscode --sourcemap",
    "watch": "tsup src/index.ts --external vscode --sourcemap --watch",
    "vscode:prepublish": "pnpm run build",
    "compile": "pnpm run dev"
  },
  "contributes": {
    "commands": [
      {
        "category": "doc-jit",
        "command": "doc-jit.open",
        "title": "Open the associated documentation",
        "icon": "$(book)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "doc-jit.open",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "dependencies": {
    "@doc-jit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "tsup": "^6.7.0"
  }
}